    <insert id="insertStaff" parameterType="com.xzit.spring.entity.Staff">
        insert into staff values (#{staff.workId},#{staff.type},#{staff.name},#{staff.phone},#{staff.sex},#{staff.age},#{staff.userInfoId})
    </insert>
</mapper>